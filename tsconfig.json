{
  "compilerOptions": {

    "target": "es2020",
    "module": "commonjs",
    "resolveJsonModule": true,

    "outDir": "./dist",
    "rootDir": ".",


    "strict": true,

    "strictPropertyInitialization": false,

    "baseUrl": "./src",
     "paths": {
      "@modules/*":["modules/*"],
      "@config/*":["config/*"],
      "@shared/*":["shared/*"]
     },
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,


    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
